{
	"manifest_version": 3,
	"name": "MAULazyTeams",
	"version": "0.0.3",
	"browser_specific_settings": {
    "gecko": {
		"id": "archways@gmx.us",
		"data_collection_permissions": {
			"required": ["authenticationInfo"]
		}
    	}
  	},
	"icons": {
    	"16": "icons/icon16.png",
    	"32": "icons/icon32.png",
    	"48": "icons/icon48.png",
    	"128": "icons/icon128.png"
  	},
	"action": {
		"default_title": "MAULazyTeams",
		"default_popup": "./src/popup_settings/popup.html",
		"default_icon": {
			"16": "icons/icon16.png",
			"32": "icons/icon32.png"
 		}
	},
	"permissions": ["storage", "activeTab", "tabs"],
	"host_permissions": [
		"https://mau.hr.evry.se/*",
		"http://localhost:4007/*",
		"http://localhost/*",
		"https://mlt.k14net.org/*"
	],
	"content_scripts": [
		{
			"matches": ["https://mau.hr.evry.se/primula*"],
			"js": ["content.js"],
			"run_at": "document_idle"
		}
	],
	"background": { "scripts": ["background.js"], "type": "module" }
}
