{
	"manifest_version": 3,
	"name": "Example Extension",
	"version": "1.0",
	"action": { "default_title": "Example", "default_popup": "popup/popup.html" },
	"permissions": ["storage"],
	"host_permissions": ["https://mau.hr.evry.se/*", "http://192.168.100.200:4007/*"],
	"content_scripts": [
		{
			"matches": ["https://mau.hr.evry.se/primula*"],
			"js": ["content.js"],
			"run_at": "document_idle"
		}
	],
	"background": { "scripts": ["background.js"] }
}
