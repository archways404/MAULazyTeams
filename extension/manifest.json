{
	"manifest_version": 3,
	"name": "MAU Primula Helper",
	"version": "0.1.0",
	"action": {
		"default_title": "MAU Helper",
		"default_popup": "popup/popup.html"
	},
	"permissions": ["storage", "activeTab", "tabs"],
	"host_permissions": [
		"https://mau.hr.evry.se/*",
		"http://localhost:4007/*",
		"http://localhost/*"
	],
	"content_scripts": [
		{
			"matches": ["https://mau.hr.evry.se/primula*"],
			"js": ["content.js"],
			"run_at": "document_idle"
		}
	],
	"background": { "scripts": ["background.js"] }
}
